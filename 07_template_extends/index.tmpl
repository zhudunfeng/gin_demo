        /*初始化*/
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        /*导航*/
        .nav{
            width: 100%;
            height: 50px;
            /*固定定位*/
            position: fixed;
            top: 0;
            background-color: burlywood;
        }

        .main {
            margin-top: 50px;
        }
        .menu{
            width: 20%;
            height: 100%;
            position: fixed;
            left: 0;
            background-color: cornflowerblue;
        }

        .center{
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="nav"></div>
    <div class="main">
        <div class="menu"></div>
        <div class="content center">
            <h1>这是index页面</h1>
            <p>{{.}}</p>
        </div>
    </div>
